<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:folding-cell="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".HomeFragment"
android:background="@drawable/background1">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >


        <com.ramotion.foldingcell.FoldingCell
            android:id="@+id/e1foldingcell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            folding-cell:additionalFlipsCount="1"
            folding-cell:cameraHeight="30">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="Patient 1"
                        android:textAlignment="center"
                        android:background="@color/colorPrimary"
                        android:textColor="#ffffff"
                        android:textSize="23sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:alpha="0.4"
                        android:background="@drawable/e1"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:lineSpacingMultiplier="1.3"
                        android:text="Age: 75 years\nGender: Male\nBelt Access Code: XN3FJ32DD\nPatient History: Glaucoma"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/e1View"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/gradient1"
                        android:clickable="true"
                        android:text="View Monitoring System"
                        android:textColor="@android:color/white"
                        android:textSize="15sp" />
                </LinearLayout>


            </FrameLayout>
            ​
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/contact_us_border">
                <LinearLayout
                    android:layout_height="100dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_height="match_parent"
                        android:layout_width="100dp"
                        android:src="@drawable/e1"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="Patient 1"
                        android:textColor="@color/colorAccent"
                        android:textSize="27sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>
            ​
        </com.ramotion.foldingcell.FoldingCell>


        <com.ramotion.foldingcell.FoldingCell
            android:id="@+id/e2foldingcell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            folding-cell:additionalFlipsCount="1"
            folding-cell:cameraHeight="30">
            ​
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="Patient 2"
                        android:textAlignment="center"
                        android:background="@color/colorPrimary"
                        android:textColor="#ffffff"
                        android:textSize="23sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:background="@drawable/e2"
                        android:alpha="0.4"
                        android:textSize="16sp"
                        android:lineSpacingMultiplier="1.3"
                        android:text="Age: 68 years\nGender: Female\nBelt Access Code: XN3SU43JS\nPatient History: Cataract"
                        android:textColor="@android:color/black" />

                    <Button
                        android:id="@+id/e2View"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/gradient1"
                        android:clickable="true"
                        android:text="View Monitoring System"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:focusable="true" />
                </LinearLayout>


            </FrameLayout>
            ​
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/contact_us_border">
                <LinearLayout
                    android:layout_height="100dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_height="match_parent"
                        android:layout_width="100dp"
                        android:src="@drawable/e2"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="Patient 2"
                        android:textColor="@color/colorAccent"
                        android:textSize="27sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>
            ​
        </com.ramotion.foldingcell.FoldingCell>

    </LinearLayout>
</ScrollView>
</FrameLayout>